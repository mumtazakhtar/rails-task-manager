<h1><%= @tasks.title %></h1>
<p><%= @tasks.details %></p>
<% if @tasks.completed == true %>
  <p>This task is completed</p>
<% else %>
  <p>This task is not completed yet</p>
<% end %>

<p><%= link_to 'Back to list', tasks_path %></p>
<p><%= link_to 'Edit the task', edit_path %></p>
<p><%= link_to "Delete",
  task_path,
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%></p>
